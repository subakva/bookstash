= form_for Book.new, remote: true do |f|
  = f.label :title
  = f.text_field :title
  = f.submit 'Add Book'

%ul{:id => 'book_list'}
  - @books.each do |book|
    %li
      = book.title
      = button_to "Delete", book_path(book),
        id: "delete-#{book.id}",
        form_class: 'delete-book',
        confirm: "Are you sure?",
        remote: true,
        method: :delete
